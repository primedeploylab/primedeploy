            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@deployprime.com\",\n  \"password\": \"Admin@123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
